{
  "name": "@hackbg/ensuite",
  "version": "1.5.2",
  "main": "ensuite.mjs",
  "type": "module",
  "types": "ensuite.d.ts",
  "files": [
    "README.md",
    "*.cjs",
    "*.mjs"
  ],
  "bin": {
    "ensuite": "ensuite.cli.cjs",
    "ensuite-cov": "ensuite-cov.cli.cjs",
    "ensuite-dev": "ensuite-dev.cli.cjs",
    "ensuite-render": "ensuite-render.cli.mjs",
    "ensuite-reload": "ensuite-reload.cli.cjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hackbg/ensuite"
  },
  "scripts": {
    "check": "tsc --noEmit",
    "test": "./ensuite.cli.cjs ensuite.test.mjs",
    "cov": "./ensuite-cov.cli.cjs ensuite.test.mjs",
    "ubik": "ubik",
    "release": "pnpm check && pnpm cov all && pnpm ubik publish --access public --otp 123123"
  },
  "description": "Literate test runner. Write tests in Markdown code blocks. Supports TypeScript without Babel.",
  "dependencies": {
    "@types/js-yaml":     "^4.0.5",
    "@types/markdown-it": "*",

    "@hackbg/ganesha": "4.2.0",
    "@hackbg/logs": "2.0.8",
    "@hackbg/file": "2.0.0",

    "c8": "^7.12",
    "glob": "^9.2.1",
    "highlight.js": "^11.7.0",
    "js-yaml": "^4.1.0",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-table-of-contents": "^0.6.0",
    "markdown-it-highlightjs": "^4.0.1",
    "pug": "^3.0.2",
    "typescript": "^5.0.4",
    "why-is-node-still-running": "^1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@hackbg/ubik": "2.0.0-rc.2"
  },
  "workspace": true,
  "packages": [
    ".",
    "./ganesha",
    "./toolbox"
  ]
}
